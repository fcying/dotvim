{
  "coc.preferences.rootPatterns": [".root", ".git", ".svn"],
  "coc.source.file.ignoreHidden": false,
  "coc.preferences.semanticTokensHighlights": false,
  "suggest.enablePreview": true,
  "diagnostic.displayByAle": false,
  "diagnostic.errorSign": "X",
  "diagnostic.warningSign": "!",
  "diagnostic.infoSign": "I",
  "diagnostic.hintSign": "H",
  "npm.binPath": "npm",
  "list.normalMappings": {
    "q": "do:exit"
  },
  "snippets.extends": {
    "cpp": ["c"],
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"]
  },
  //https://github.com/clangd/clangd/releases
  "clangd.enabled": true,
  "clangd.disableDiagnostics": true,
  "clangd.path": "clangd",
  "clangd.disableSnippetCompletion": true,
  "clangd.semanticHighlighting": false,
  "clangd.arguments": [],
  //wget -Ojls.tgz https://download.eclipse.org/jdtls/milestones/0.57.0/jdt-language-server-0.57.0-202006172108.tar.gz
  //tar xzvf jls.tgz -C ~/.vim/.cache/coc/extensions/coc-java-data/server
  "go.enable": true,
  "go.goplsOptions": {
    "completeUnimported": true
  },
  "languageserver": {
    //"ccls": {
    //  "command": "ccls",
    //  "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
    //  "rootPatterns": [".root/", ".ccls", "compile_commands.json", ".git/"],
