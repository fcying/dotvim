set nocompatible
set mouse=n
let g:config_dir = '~/.vim'
let g:cache_dir = '~/.vim/.cache'

let s:plug_install_dir = '~/.vim/.plugged/pack/packager/opt'
exec 'source '. s:plug_install_dir . '/vim-plug/plug.vim'
call plug#begin(expand(s:plug_install_dir))
Plug 'lifepillar/vim-solarized8'
Plug 'hrsh7th/nvim-cmp'
Plug 'hrsh7th/cmp-path'
Plug 'andersevenrud/compe-tmux', { 'branch': 'cmp' }
call plug#end()
delc PlugUpgrade

filetype plugin indent on
syntax enable

" color
set termguicolors
set background=light
colorscheme solarized8
