{
  "coc.rootPatterns": [".root", ".git", ".svn"],
  "diagnostic.displayByAle": true,
  "diagnostic.errorSign": "X",
  "diagnostic.warningSign": "!",
  "diagnostic.infoSign": "I",
  "diagnostic.hintSign": "H",
  "python.jediEnabled": false,
  "npm.binPath": "npm",
  "list.normalMappings": {
    "q": "do:exit"
  },
  "vimlsp.diagnostic.enable": {
    "type": "boolean",
    "default": true,
    "description": "enable diagnostic"
  },
  "snippets.extends": {
    "cpp": ["c"],
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"]
  },
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".root/", ".ccls", "compile_commands.json", ".git/"],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        }
      }
    },
    //"clangd": {
    //  "command": "clangd",
    //  "rootPatterns": [".root", "compile_flags.txt", ".git/"],
    //  "filetypes": ["c", "cpp", "objc", "objcpp"]
    //},
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "golang": {
      "filetypes": ["go"],
      "command": "gopls",
      "rootPatterns": ["go.mod", ".root/", ".git/"],
    }
  }
}
