{
  "coc.preferences.rootPatterns": [".root", ".git", ".svn"],
  "coc.source.file.ignoreHidden": false,
  "suggest.enablePreview": true,
  "diagnostic.displayByAle": false,
  "diagnostic.errorSign": "X",
  "diagnostic.warningSign": "!",
  "diagnostic.infoSign": "I",
  "diagnostic.hintSign": "H",
  "npm.binPath": "npm",
  "list.normalMappings": {
    "q": "do:exit"
  },
  "snippets.extends": {
    "cpp": ["c"],
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"]
  },
  "vimlsp.diagnostic.enable": true,
  "vimlsp.indexes.count": 1,
  "vimlsp.indexes.gap": 200,
  "python.jediEnabled": true,
  "python.analysis.diagnosticEnabled": true,
  //https://github.com/clangd/clangd/releases
  "clangd.enabled": true,
  "clangd.disableDiagnostics": true,
  "clangd.path": "clangd",
  "clangd.disableSnippetCompletion": true,
  "clangd.arguments": ["--background-index"],
  "go.enable": true,
  "go.goplsOptions": {
    "completeUnimported": true
  },
  "languageserver": {
    //"ccls": {
    //  "command": "ccls",
    //  "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
    //  "rootPatterns": [".root/", ".ccls", "compile_commands.json", ".git/"],
    //  "initializationOptions": {
    //    "cache": {
    //      "directory": ".ccls-cache"
    //    }
    //  }
    //},
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    }
  }
}
